<div class="container">
  <%if flash[:notice] %>
    <div class="alert alert-info">
      <%= flash[:notice] %>
      <button class="close" data-dismiss="alert">Ã—</button>
      </div>
  <% end %>
  <h1><%= @article.title%>
  <small>
      <%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_article_path(@article) %>
