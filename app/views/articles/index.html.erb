<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%  @articles.each do |article|%>
        <div class="article">
          <h2><%=link_to article.title, article_path(article) %></h2>
          <p><%= article.content.truncate(100) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
